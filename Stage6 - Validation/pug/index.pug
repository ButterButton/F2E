html(lang="en")
    head
        - var name = 'Stage6 - Validation'
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title= name
        link(rel='stylesheet prefetch' href='https://use.fontawesome.com/releases/v5.0.13/css/all.css')
        link(href="https://fonts.googleapis.com/css?family=Indie+Flower|Jua|Oxygen" rel="stylesheet")
        link(rel="stylesheet", type="text/css" href="css/style.css")
        link(rel="stylesheet", type="text/css" href="css/bar.css")
    body
        #app
            .cotainer
                .createaccount
                    header
                    ul.progressbar
                        li.active
                        li
                        li
                        li
                    .title
                        h1 Create Account
                        p  Glad to see you here!
                    .main
                        .funt
                            h3 Account
                            input.page1(type="text", name="email", v-bind:class="{ 'is-invalid': emailError }", v-model="email", placeholder="Email")
                            h5.invalid-feedback {{ emailErrMsg }}
                        .funt
                            h3 Password
                            input.page1(type="password", name="")
                        .funt
                            h3 Comfirm Password
                            input.page1(type="password", name="")
                        button(type="button")|SUBMIT & NEXT
                .infomation
                    header
                    ul.progressbar
                        li
                        li.active
                        li
                        li
                    .title
                        h1 General Infomation
                        p  Tell us who you are!
                    .main
                        .funt
                            .name
                                h3 Name
                                input.nametext(type="text", name="")
                            .phone
                                h3 Phone*
                                input.phonetext(type="text", name="")
                            .clear

                        .funt
                            h3 Birth Date
                            select.birth(name="")
                            select.birth(name="")
                            select.birth(name="")
                            .clear
                        .funt
                            h3 Address*
                            select.address(name="")
                            select.address(name="")
                            input.road(type="text", name="")
                            .clear
                        button(type="button")|SUBMIT & NEXT
                .update
                    header
                    ul.progressbar
                        li
                        li
                        li.active
                        li
                    .title
                        h1 Update Profile Picture
                        p  We wanna know you more!
                    .main
                        .funt(style="height:140px")
                            label.upload(for="")
                                input(type="file", name="")
                                i.fas.fa-images
                                p UPLOAD UP TO 3 PHOTOS MAX SIZE: 150*150px                                                      
                        button(type="button")|SUBMIT & NEXT
                .payment
                    header
                    ul.progressbar
                        li
                        li
                        li
                        li.active
                    .title
                        h1 Payment Method
                        p  Add your credit card infomation! 
                    .main
                        .funt
                            h3 Card Number
                            input.page1(type="text", name="")
                            <i class="fab fa-cc-visa"></i>                        
                        .funt
                            .cardname
                                h3 Cardholder Name
                                input.page1(type="text", name="")
                            .bankname
                                h3 Bank Name
                                input.page1(type="text", name="")
                            .clear
                        .funt
                            .cvv
                                h3 CVV
                                input.page1(type="password", name="")
                            .mm
                                h3 Expire Date
                                select.date(name="")
                            .dd
                                select.date(name="")
                            .clear
                        button(type="button")|SUBMIT & NEXT
                .smile
                    header
                    ul.progressbar
                        li.active
                        li.active
                        li.active
                        li.active
                    .title
                        h1 Congratulations
                        p  Now you’re one of us! 
                    .main
                        .funt(style="margin= 0")
                            div ☻
                        p.redirect Redirected to homepage after 5 seconds…
        script(src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js")
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        script(src='js/main.js')



                        
